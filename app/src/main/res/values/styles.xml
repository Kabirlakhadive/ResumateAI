<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- Darker variant of the primary brand color. -->
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <!-- Text color for elements displayed on top of the primary color. -->
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <!-- Darker variant of the secondary brand color. -->
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <!-- Text color for elements displayed on top of the secondary color. -->
        <item name="colorOnSecondary">@color/colorOnSecondary</item>

        <!-- Status bar color. -->
         <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- You can uncomment and customize the status bar color if needed -->

        <!-- Background color for the app -->
        <item name="android:colorBackground">@color/colorBackground</item>
        <!-- Text color for elements displayed on top of the background color. -->
        <item name="colorOnBackground">@color/colorOnBackground</item>

        <!-- Surface color for components like cards, sheets, and menus. -->
        <item name="colorSurface">@color/colorSurface</item>
        <!-- Text color for elements displayed on top of the surface color. -->
        <item name="colorOnSurface">@color/colorOnSurface</item>

        <!-- Error color for indicating errors in components like TextFields. -->
        <item name="colorError">@color/colorError</item>
        <!-- Text color for elements displayed on top of the error color. -->
        <item name="colorOnError">@color/colorOnError</item>

        <!-- Customize your theme here. -->
        <!-- ... other non-color theme items -->

        <!-- You can optionally set the default style for all TextInputLayouts here -->
         <item name="textInputStyle">@style/Widget.App.TextInputLayout.OutlinedBox.Rounded</item>
    </style>
    <!-- Custom TextInputLayout Style -->
    <style name="Widget.App.TextInputLayout.OutlinedBox.Rounded" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Outline color -->
        <item name="boxStrokeColor">@color/text_input_layout_stroke_color</item>
        <!-- Hint text color -->
        <item name="hintTextColor">@color/text_input_layout_hint_color</item>
        <!-- Set corner radius -->
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <!-- You can also customize the stroke width if needed -->
        <!-- <item name="boxStrokeWidth">1dp</item> -->
        <!-- <item name="boxStrokeWidthFocused">2dp</item> -->
    </style>


    <style name="ShapeAppearanceOverlay.MyApp.Fab.Circle" parent="">
