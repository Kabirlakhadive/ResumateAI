<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Color when focused -->
    <item android:color="@color/colorPrimary" android:state_focused="true" />
    <!-- Color when hovered (optional, mainly for accessibility/physical keyboards) -->
    <item android:color="@color/colorPrimary" android:state_hovered="true" />
    <!-- Color when enabled and not focused -->
    <item android:color="@color/medium_grey" android:state_enabled="true" />
    <!-- Default color (disabled) -->
    <item android:color="@color/medium_grey" android:alpha="0.38" />
</selector>