{
  "templateName": "two_col_minimal_right_sidebar",
  "nameAtTop": false,
  "contactAtTop": false,
  "leftRatio": "2f", // Main content on left
  "rightRatio": "1f", // Narrow sidebar on right
  "sectionLeftOrder": [
    "name",
    "objective",
    "experience",
    "projects"
  ],
  "sectionRightOrder": [
    "contact",
    "skills",
    "education",
    "certifications",
    "achievements"
  ],
  "page": {
    "imageBackground": false,
    "backgroundImage": null,
    "background": "#FFFFFF",
    "borderRadius": 0,
    "padding": 40,
    "verticalLine": true, // Add a subtle line
    "verticalLineColor": "#EEEEEE", // Very light gray
    "verticalLineWidth": 1.0,
    "verticalLineMargin": 15,
    "footer": false,
    "sectionRightTopMargin": 10,// Align right content slightly lower
    "sectionLeftTopMargin": 10
  },
  "objective": {
    "heading": false // No heading for objective/summary
  },
  "name": {
    "font": "Montserrat-Bold.ttf",
    "size": 24,
    "alignment": "left",
    "color": "#2196F3", // Blue
    "marginBottom": 2,
    "marginTop": 3,
    "backgroundColor": false,
    "background": "#FFFFFF",
    "line": false // Maybe a subtle line below contact instead
  },
  "contact": {
    "separator": "\n",
    "background": "#FFFFFF",
    "borderRadius": 0,
    "paddingVertical": 0,
    "paddingHorizontal": 0,
    "alignment": "left", // Left align within right column
    "font": "Montserrat-Regular.ttf",
    "size": 9,
    "color": "#555555"
  },
  "headings": {
    "font": "Montserrat-SemiBold.ttf",
    "size": 13,
    "color": "#333333",
    "backgroundColor": false,
    "background": "#FFFFFF",
    "backgroundFullLine": false,
    "allCaps": true, // Maybe caps for sidebar headings
    "paddingHorizontal": 0,
    "borderRadius": 0,
    "marginBottom": 4
  },
  "text": {
    "font": "Montserrat-Regular.ttf",
    "size": 10,
    "spacing": 1.4,
    "verticalMargin": 2,
    "color": "#333333"
  },
  "skills": {
    "font": "Montserrat-Regular.ttf",
    "size": 10,
    "alignment": "left",
    "color": "#333333",
    "background": "#FFFFFF",
    "borderRadius": 0,
    "paddingVertical": 1,
    "paddingHorizontal": 0,
    "spacing": 3,
    "columns": 1 // Single column skills
  },
  "line": {
    "line": false,
    "width": 1.0,
    "color": "#000000"
  }
}